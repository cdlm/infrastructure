#!/bin/bash
# interactive non-login shell setup

# modularized portable configs
for f in ~/.bash.d/rc/*; do
   source $f
done


# ad-hoc stuff
export TEXINPUTS=./local//:
export RLWRAP_HOME=~/.rlwrap.d


# utilities
for f in ~/.bash.d/functions/*; do
   source $f
done

if [ -f /opt/local/etc/bash_completion ]; then
   source /opt/local/etc/bash_completion
   for f in ~/.bash.d/completion/*; do
      source $f
   done
fi

unset f