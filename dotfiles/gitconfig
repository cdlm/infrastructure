[user]
	name = Damien Pollet
	email = damien.pollet@inria.fr
	
[alias]
	changes = diff --name-status -r
	st = status
	ci = commit
	co = checkout
	branches = branch -a --verbose
	remotes = remote --verbose
	svnci = svn dcommit
	svnup = svn rebase
	tgz = !bash -c 'git archive --format=tar --prefix=${1:-HEAD}/ ${2:-HEAD} | gzip > ${1:-HEAD}.tar.gz' --
	ignoretex = !bash -c 'echo -e "${1:-*}.pdf\\\\n*.aux\\\\n*.bbl\\\\n*.blg\\\\n*.glg\\\\n*.glo\\\\n*.gls\\\\n*.log\\\\n*.out\\\\n*.toc" | tee -a .git/info/exclude' --
	ignore = !bash -c 'echo -e "${1}" >> .git/info/exclude' --

[diff]
	renames = true

[core]
	excludesfile = /Users/damien/.gitignore
	pager = less -FRSX

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = green reverse
	local = green
	remote = red bold

[color "diff"]
	meta = cyan
	frag = blue
	old = red bold
	new = green bold

[color "status"]
	added = green bold
	changed = yellow
	untracked = magenta
