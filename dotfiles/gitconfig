# -*- ini -*-

[user]
    name = Damien Pollet
    email = damien.pollet@gmail.com

[alias]
    root = rev-parse --show-toplevel
    l = log --oneline --decorate --graph
    dst = !"f () { git diff $* | diffstat; }; f"
    staged = diff --staged
    wdiff = diff --word-diff=color
    st = status --short --branch
    ci = commit
    co = checkout
    branches = branch -a --verbose
    remotes = remote --verbose
    svnci = !"f () { git svn rebase && git svn dcommit; }; f"
    svnup = svn rebase
    svnups = !"f () { git stash && git svnup && git stash apply; }; f"
    tgz = !"f () { git archive --format=tar --prefix=${1:-HEAD}/ ${2:-HEAD} | gzip > ${1:-HEAD}.tar.gz; }; f"
    ignore = !"f () { local ignore_file=$( git rev-parse --show-cdup ).gitignore arg; for arg in $*; do echo $arg >> $ignore_file; done; sort -u -o $ignore_file $ignore_file; }; f"
    unignore = !"f () { sed -i .bak \"/^${1}\\$/d\" .gitignore; }; f"
    exclude = !"f () { for each; do echo \"${each}\" >> .git/info/exclude; done; }; f"
    unexclude = !"f () { sed -i .bak \"/^${1}\\$/d\" .git/info/exclude; }; f"

[push]
    default = current

[diff]
    renames = true

[core]
    excludesfile = ~/.gitignore
    pager = less -FRSX

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = green reverse
    local = green
    remote = red bold

[color "diff"]
    meta = cyan
    frag = blue
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = magenta
    header = white

[color "decorate"]
    HEAD = green
    branch = cyan
    tag = blue
    remoteBranch = red 

