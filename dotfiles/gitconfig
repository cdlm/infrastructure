# -*- ini -*-

[user]
	name = Damien Pollet
	email = damien.pollet@inria.fr
	
[alias]
	changes = diff --name-status -r
	dst = !bash -c 'git diff $* | diffstat' --
	st = status
	ci = commit
	co = checkout
	branches = branch -a --verbose
	remotes = remote --verbose
	svnci = !bash -c 'git svn rebase && git svn dcommit'
	svnup = svn rebase
	tgz = !bash -c 'git archive --format=tar --prefix=${1:-HEAD}/ ${2:-HEAD} | gzip > ${1:-HEAD}.tar.gz' --
	ignore = !bash -c 'echo -e "${1}" >> .gitignore' --
	unignore = !bash -c 'sed -i .bak "/^${1}\\$/d" .gitignore' --

[push]
	default = tracking

[diff]
	renames = true

[core]
	excludesfile = /Users/damien/.gitignore
	pager = less -FRSX

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = green reverse
	local = green
	remote = red bold

[color "diff"]
	meta = cyan
	frag = blue
	old = red bold
	new = green bold

[color "status"]
	added = green bold
	changed = yellow
	untracked = magenta
